<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical"
    android:id="@+id/relativeLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/cycleTimeActualHeader"
            android:textSize="24sp"
            android:layout_marginTop="15dp"
            android:text="Actual [s]: "/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cycleTimeTextField_actual"
            android:textSize="24sp"
            android:layout_alignBottom="@+id/cycleTimeActualHeader"
            android:layout_toRightOf="@+id/cycleTimeActualHeader"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cycleTimeMeanHeader"
        android:layout_below="@id/cycleTimeTextField_actual"
        android:textSize="24sp"
        android:layout_marginTop="15dp"
        android:text="Mean [s]: "/>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cycleTimeTextField_mean"
        android:textSize="24sp"
        android:layout_alignBottom="@+id/cycleTimeMeanHeader"
        android:layout_toRightOf="@+id/cycleTimeMeanHeader"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonClear"
            android:text="Clear"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

